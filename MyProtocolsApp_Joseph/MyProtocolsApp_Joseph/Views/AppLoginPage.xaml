<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProtocolsApp_Joseph.Views.AppLoginPage"
             Shell.NavBarIsVisible="false" 
             NavigationPage.HasNavigationBar="false" 
             BackgroundColor="Aqua"
             BackgroundImageSource="AppLoginBg">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="50, 25, 50,25" >
            <Entry x:Name="TxtUserName" Placeholder="Email" FontSize="30" Keyboard="Email" TextColor="#F3F7F8" />
            <Entry x:Name="TxtPassword" Placeholder="PASSWORD" FontSize="25" Keyboard="Default" IsPassword="true" TextColor="#EDEEEE" />
            <Switch x:Name="SwShowPassword" IsToggled="False" Toggled="SwShowPassword_Toggled" />
            
            <Button x:Name="BtnLogin" Text="Login" BackgroundColor="Green" CornerRadius="15" Clicked="BtnLogin_Clicked" />
           
            <Button x:Name="BtnSingUp" Text="Sing up" BackgroundColor="#28809E" CornerRadius="15" Clicked="BtnSingUp_Clicked"/>

            <Label x:Name="LblPasswordrecovery" Text="Pasword Recovery..." TextColor="#FAF5F5" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>